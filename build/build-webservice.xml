<project name="webservice">
    <!--Part of doms build framework version 1.0.4-->

    <property name="warfilename" value="${ant.project.name}.war"/>

    <import file="build-common.xml"/>

    <dirname property="webservice.basedir" file="${ant.file.webservice}"/>

    <target name="war"
            description="Pack the webdirectory into a warfile ready for deployment">
        <mkdir dir="dist"/>
        <pathconvert property="module.dependencies.pathconvert"
                     refid="module.dependencies">
            <mapper type="regexp" from="^(.)*" to="\0/dist/\*.jar"/>
        </pathconvert>

        <script language="javascript" classpathref="rhino.classpath"
                src="${webservice.basedir}/convertPath.js"/>


        <copy todir="libtemp" flatten="true">

            <fileset refid="module.libs"/>
            <fileset refid="project.libs"/>
            <fileset dir="${global.dir}/lib">
                <selector refid="all.jars"/>
            </fileset>
            <fileset refid="module.dependencies.jars"/>
        </copy>

        <antcall target="war.with.wsdl"/>
        <antcall target="war.without.wsdl"/>

        <delete dir="libtemp"/>

    </target>

    <target name="war.with.wsdl" if="wsdl.dir">
        <war destfile="dist/${warfilename}"
             webxml="web/WEB-INF/web.xml">
            <classes dir="classes"/>
            <lib dir="libtemp"/>
            <webinf dir="web/WEB-INF">
                <exclude name="web.xml"/>
            </webinf>

            <webinf dir="${wsdl.dir}" prefix="WEB-INF/wsdl"/>
            <fileset dir="web">
                <exclude name="WEB-INF/**"/>
            </fileset>
        </war>

    </target>

    <target name="war.without.wsdl" unless="wsdl.dir">
        <war destfile="dist/${warfilename}"
             webxml="web/WEB-INF/web.xml">
            <classes dir="classes"/>
            <lib dir="libtemp"/>
            <webinf dir="web/WEB-INF">
                <exclude name="web.xml"/>
            </webinf>
            <fileset dir="web">
                <exclude name="WEB-INF/**"/>
            </fileset>
        </war>

    </target>


</project>
